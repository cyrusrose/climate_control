<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="stats"
            type="com.arduino.access.model.Stats" />
        <variable
            name="values"
            type="com.arduino.access.model.Values" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:id="@+id/card"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image"
                app:srcUrl="@{ stats.uri }"
                app:placeholder="@{@drawable/image_placeholder}"
                tools:src="@drawable/fiber_cable"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:paddingHorizontal="8dp"
                android:paddingBottom="8dp"
                android:paddingTop="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:id="@+id/name"
                    android:text="@{ stats.name }"
                    tools:text="Temperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/image" />

                <ProgressBar
                    android:layout_marginTop="8dp"
                    android:id="@+id/progress"
                    android:max="100"
                    android:progress="50"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:text="Value"
                    app:values="@{ values }"
                    app:pattern="@{ stats.pattern }"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="?android:attr/textColorSecondary" />
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>